<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Formulario para imágenes de la galería -->
    <record id="view_museo_galeria_form" model="ir.ui.view">
        <field name="name">museo.museo.galeria.form</field>
        <field name="model">museo.museo.galeria</field>
        <field name="arch" type="xml">
            <form string="Imagen de Galería">
                <header>
                    <button name="action_set_as_principal" 
                            type="object" 
                            string="Establecer como Principal"
                            class="btn-primary"
                            icon="fa-star"
                            invisible="'es_imagen_principal', '=', True"/>
                    <field name="es_imagen_principal" widget="boolean_favorite" 
                           options="{'no_toggling': True}" readonly="1"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="museo_id" options="{'no_create': True}" context="{'default_active': True}"/>
                            <field name="categoria"/>
                            <field name="sequence" widget="handle"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="imagen" widget="image" class="oe_avatar" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Detalles">
                            <group>
                                <group>
                                    <field name="descripcion" nolabel="1"/>
                                </group>
                                <group>
                                    <field name="fecha_captura" widget="date"/>
                                    <field name="autor"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Kanban para la galería -->
    <record id="view_museo_galeria_kanban_old" model="ir.ui.view">
        <field name="name">museo.museo.galeria.kanban</field>
        <field name="model">museo.museo.galeria</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="museo_id"/>
                <field name="es_imagen_principal"/>
                <field name="sequence"/>
                <field name="imagen"/>
                <field name="categoria"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image" t-if="record.imagen.raw_value">
                                <img t-att-src="kanban_image('museo.museo.galeria', 'imagen', record.id.raw_value)" 
                                     alt="record.name.raw_value" 
                                     class="img img-fluid"/>
                            </div>
                            <div class="o_kanban_details">
                                <div class="o_kanban_record_title">
                                    <field name="name"/>
                                    <t t-if="record.es_imagen_principal.raw_value">
                                        <span class="fa fa-star text-warning" title="Imagen Principal"/>
                                    </t>
                                </div>
                                <div>
                                    <field name="categoria"/>
                                </div>
                                <div t-if="record.museo_id.raw_value">
                                    <field name="museo_id" widget="many2one_avatar"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

