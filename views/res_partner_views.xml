    <!-- Acción específica para Trabajadores de Museo -->
    <record id="action_museo_trabajadores" model="ir.actions.act_window">
        <field name="name">Trabajadores de Museos</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="domain">[('is_trabajador_museo', '=', True)]</field>
        <field name="context">{'default_is_trabajador_museo': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay trabajadores de museos registrados.
            </p>
            <p>
                Registre a los trabajadores del museo para asignarlos a actividades y convenios.
            </p>
        </field>
    </record>

    <!-- Vista Kanban para Trabajadores -->
    <record id="view_res_partner_kanban_museo" model="ir.ui.view">
        <field name="name">res.partner.kanban.museo</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="cargo"/>
                <field name="especialidad"/>
                <field name="image_1920"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('res.partner', 'image_1920', record.id.raw_value)" alt="Avatar" class="oe_kanban_image"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="cargo"/>
                                </div>
                                <div>
                                    <small>
                                        <field name="especialidad"/>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>