<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extensión del formulario de Contacto para Trabajadores -->
    <record id="view_res_partner_form_museo_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.museo.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']" position="after">
                <page string="Información de Museo" invisible="'is_trabajador_museo', '=', False">
                    <group>
                        <group>
                            <field name="is_trabajador_museo"/>
                            <field name="cargo"/>
                            <field name="especialidad"/>
                            <field name="fecha_ingreso" widget="date"/>
                            <field name="horas_semanales"/>
                        </group>
                        <group>
                            <field name="actividad_ids" widget="many2many_tags"/>
                            <field name="convenio_ids" widget="one2many">
                                <list>
                                    <field name="name"/>
                                    <field name="estado"/>
                                    <field name="fecha_inicio"/>
                                    <field name="fecha_fin"/>
                                </list>
                            </field>
                        </group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//field[@name='category_id']" position="before">
                <field name="is_trabajador_museo" widget="boolean_button" options='{"terminology": "trabajador"}'/>
            </xpath>
        </field>
    </record>

    <!-- Vista de Lista para Trabajadores de Museo -->
    <record id="view_res_partner_tree_museo" model="ir.ui.view">
        <field name="name">res.partner.tree.museo</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='email']" position="after">
                <field name="is_trabajador_museo" invisible="1"/>
                <field name="cargo"/>
            </xpath>
        </field>
    </record>

