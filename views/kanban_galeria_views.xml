<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Kanban para Galería de Fotos -->
    <record id="view_museo_galeria_kanban" model="ir.ui.view">
        <field name="name">museo.museo.galeria.kanban</field>
        <field name="model">museo.museo.galeria</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="imagen"/>
                <field name="categoria"/>
                <field name="fecha_captura"/>
                <field name="autor"/>
                <field name="es_imagen_principal"/>
                <field name="sequence"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_galeria_kanban">
                            <!-- Imagen -->
                            <div class="o_kanban_image_container">
                                <div class="o_kanban_image_wrapper">
                                    <img t-if="record.imagen.raw_value" t-att-src="'/web/image/museo.museo.galeria/' + record.id.raw_value + '/imagen/300x200'" alt="Imagen de galería" class="oe_kanban_image img-fluid"/>
                                    <div t-else="" class="o_kanban_image_placeholder">
                                        <i class="fa fa-picture-o fa-3x text-muted"/>
                                    </div>
                                </div>
                                <!-- Indicador de imagen principal -->
                                <div t-if="record.es_imagen_principal.raw_value" class="principal-badge">
                                    <span class="badge bg-warning">
                                        <i class="fa fa-star me-1"/>
                                        Principal
                                    </span>
                                </div>
                                <!-- Categoría -->
                                <div class="categoria-badge">
                                    <span class="badge bg-primary">
                                        <field name="categoria"/>
                                    </span>
                                </div>
                            </div>
                            <!-- Información -->
                            <div class="o_kanban_card_body">
                                <strong class="o_kanban_record_title d-block mb-1">
                                    <field name="name"/>
                                </strong>
                                <div class="row g-1">
                                    <div class="col-6">
                                        <small class="text-muted">
                                            <i class="fa fa-user me-1"/>
                                            <field name="autor"/>
                                        </small>
                                    </div>
                                    <div class="col-6">
                                        <small class="text-muted">
                                            <i class="fa fa-calendar me-1"/>
                                            <field name="fecha_captura" widget="date"/>
                                        </small>
                                    </div>
                                </div>
                                <!-- Acción para establecer como principal -->
                                <div class="mt-2">
                                    <button type="button" class="btn btn-sm btn-outline-warning w-100" name="action_set_as_principal">
                                        <i class="fa fa-star me-1"/>
                                        Establecer como Principal
                                    </button>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>