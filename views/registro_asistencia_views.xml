<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Modelo de Registro de Asistencia (añadir al __init__.py de models) -->
    
    <!-- Formulario de Registro de Asistencia -->
    <record id="view_museo_registro_asistencia_form" model="ir.ui.view">
        <field name="name">museo.registro.asistencia.form</field>
        <field name="model">museo.registro.asistencia</field>
        <field name="arch" type="xml">
            <form string="Registro de Asistencia">
                <header>
                    <button name="%(action_museo_actividad)d" type="action" string="Volver a Actividades" class="btn-secondary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h2>Registro de Asistencia</h2>
                    </div>
                    <group>
                        <group>
                            <field name="actividad_id" domain="[('estado', 'in', ['confirmada', 'en_curso'])]"/>
                            <field name="fecha" widget="date"/>
                            <field name="asistentes"/>
                            <field name="grupo_edad"/>
                        </group>
                        <group>
                            <field name="origen"/>
                            <field name="satisfaccion" widget="float" options="{'precision': 1}"/>
                            <field name="comentarios" widget="textarea"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Lista de Registros de Asistencia -->
    <record id="view_museo_registro_asistencia_tree" model="ir.ui.view">
        <field name="name">museo.registro.asistencia.tree</field>
        <field name="model">museo.registro.asistencia</field>
        <field name="arch" type="xml">
            <list string="Registros de Asistencia">
                <field name="actividad_id"/>
                <field name="fecha"/>
                <field name="asistentes"/>
                <field name="grupo_edad"/>
                <field name="origen"/>
                <field name="satisfaccion"/>
            </list>
        </field>
    </record>

    <!-- Búsqueda de Registros de Asistencia -->
    <record id="view_museo_registro_asistencia_search" model="ir.ui.view">
        <field name="name">museo.registro.asistencia.search</field>
        <field name="model">museo.registro.asistencia</field>
        <field name="arch" type="xml">
            <search string="Buscar Registros de Asistencia">
                <field name="actividad_id"/>
                <field name="fecha"/>
                <field name="grupo_edad"/>
                <separator/>
                <filter string="Hoy" name="hoy" domain="[('fecha', '=', context_today())]"/>
                <filter string="Esta semana" name="esta_semana" domain="[('fecha', '&gt;=', context_today() - 7), ('fecha', '&lt;=', context_today())]"/>
                <filter string="Alta satisfacción (&gt;= 4)" name="alta_satisfaccion" domain="[('satisfaccion', '>=', 4)]"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Actividad" name="grupo_actividad" context="{'group_by': 'actividad_id'}"/>
                    <filter string="Grupo Edad" name="grupo_edad" context="{'group_by': 'grupo_edad'}"/>
                    <filter string="Semana" name="grupo_semana" context="{'group_by': 'fecha:week'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción para Registros de Asistencia -->
    <record id="action_museo_registro_asistencia" model="ir.actions.act_window">
        <field name="name">Registros de Asistencia</field>
        <field name="res_model">museo.registro.asistencia</field>
        <field name="view_mode">list,form,graph,pivot</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay registros de asistencia.
            </p>
            <p>
                Registre la asistencia a las actividades para generar estadísticas precisas.
            </p>
        </field>
    </record>

    <!-- Vista de Gráfico para Asistencia -->
    <record id="view_museo_registro_asistencia_graph" model="ir.ui.view">
        <field name="name">museo.registro.asistencia.graph</field>
        <field name="model">museo.registro.asistencia</field>
        <field name="arch" type="xml">
            <graph string="Análisis de Asistencia" type="line">
                <field name="fecha" interval="day" type="row"/>
                <field name="grupo_edad" type="col"/>
                <field name="asistentes" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Vista de Pivote para Asistencia -->
    <record id="view_museo_registro_asistencia_pivot" model="ir.ui.view">
        <field name="name">museo.registro.asistencia.pivot</field>
        <field name="model">museo.registro.asistencia</field>
        <field name="arch" type="xml">
            <pivot string="Análisis de Satisfacción">
                <field name="grupo_edad" type="col"/>
                <field name="origen" type="row"/>
                <field name="asistentes" type="measure"/>
                <field name="satisfaccion" type="measure" interval="avg"/>
            </pivot>
        </field>
    </record>
</odoo>