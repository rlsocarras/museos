<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Kanban para Objetos - Mejorada -->
    <record id="view_museo_objeto_kanban" model="ir.ui.view">
        <field name="name">museo.objeto.kanban</field>
        <field name="model">museo.objeto</field>
        <field name="arch" type="xml">
            <kanban default_group_by="categoria" class="o_kanban_mobile">
                <field name="name"/>
                <field name="codigo_inventario"/>
                <field name="categoria"/>
                <field name="estado_conservacion"/>
                <field name="imagen"/>
                <field name="valor_estimado"/>
                <field name="ubicacion_actual"/>
                <field name="fecha_adquisicion"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <!-- Imagen del objeto -->
                            <div class="o_kanban_image">
                                <img t-if="record.imagen.raw_value" 
                                     t-att-src="'/web/image/museo.objeto/' + record.id.raw_value + '/imagen/200x200'" 
                                     alt="Imagen del objeto" 
                                     class="oe_kanban_image"/>
                                <div t-else="" class="oe_kanban_image">
                                    <i class="fa fa-picture-o fa-3x text-muted"/>
                                    <small class="text-muted">Sin imagen</small>
                                </div>
                            </div>
                            <!-- Informaci贸n del objeto -->
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <small class="text-muted">
                                        <i class="fa fa-barcode"/>
                                        <field name="codigo_inventario"/>
                                    </small>
                                </div>
                                <!-- Estado de conservaci贸n -->
                                <div>
                                    <span t-att-class="'badge bg-' + ({
                                        'excelente': 'success',
                                        'bueno': 'info',
                                        'regular': 'warning',
                                        'malo': 'danger',
                                        'restauracion': 'primary'
                                    }[record.estado_conservacion.raw_value] || 'secondary')">
                                        <field name="estado_conservacion"/>
                                    </span>
                                    <span class="badge bg-primary ms-1">
                                        <field name="categoria"/>
                                    </span>
                                </div>
                                <!-- Ubicaci贸n -->
                                <div class="mt-1">
                                    <small class="text-muted">
                                        <i class="fa fa-map-marker"/>
                                        <field name="ubicacion_actual"/>
                                    </small>
                                </div>
                                <!-- Fecha de adquisici贸n -->
                                <div class="mt-1">
                                    <small class="text-muted">
                                        <i class="fa fa-calendar"/>
                                        Adquirido: <field name="fecha_adquisicion" widget="date"/>
                                    </small>
                                </div>
                                <!-- Valor estimado -->
                                <div t-if="record.valor_estimado.raw_value &gt; 0" class="mt-1">
                                    <small class="text-muted">
                                        <i class="fa fa-money"/>
                                        Valor:
                                    </small>
                                    <strong class="text-success">
                                        <field name="valor_estimado" widget="monetary"/>
                                    </strong>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>