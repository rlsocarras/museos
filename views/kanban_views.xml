<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Kanban para Museos -->
    <record id="view_museo_museo_kanban" model="ir.ui.view">
        <field name="name">museo.museo.kanban</field>
        <field name="model">museo.museo</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="fecha_creacion"/>
                <field name="total_objetos"/>
                <field name="total_actividades"/>
                <field name="total_convenios"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="row">
                                    <div class="col-4 text-center">
                                        <div class="o_kanban_primary_bottom">
                                            <span class="o_kanban_inline_block">
                                                <i class="fa fa-book fa-2x"/>
                                            </span>
                                            <br/>
                                            <span class="o_kanban_inline_block">
                                                <field name="total_objetos"/>
                                            </span>
                                            <br/>
                                            <small>Objetos</small>
                                        </div>
                                    </div>
                                    <div class="col-4 text-center">
                                        <div class="o_kanban_primary_bottom">
                                            <span class="o_kanban_inline_block">
                                                <i class="fa fa-calendar fa-2x"/>
                                            </span>
                                            <br/>
                                            <span class="o_kanban_inline_block">
                                                <field name="total_actividades"/>
                                            </span>
                                            <br/>
                                            <small>Actividades</small>
                                        </div>
                                    </div>
                                    <div class="col-4 text-center">
                                        <div class="o_kanban_primary_bottom">
                                            <span class="o_kanban_inline_block">
                                                <i class="fa fa-handshake-o fa-2x"/>
                                            </span>
                                            <br/>
                                            <span class="o_kanban_inline_block">
                                                <field name="total_convenios"/>
                                            </span>
                                            <br/>
                                            <small>Convenios</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <small>
                                            <i class="fa fa-calendar"/>
                                            <span t-esc="'Creado: ' + record.fecha_creacion.raw_value"/>
                                        </small>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_footer">
                                <div class="o_kanban_card_buttons">
                                    <button type="button" class="btn btn-sm btn-outline-primary" name="action_view_objetos">
                                        <i class="fa fa-book"/> Objetos
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-secondary" name="action_view_actividades">
                                        <i class="fa fa-calendar"/> Actividades
                                    </button>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista Kanban para Actividades -->
    <record id="view_museo_actividad_kanban" model="ir.ui.view">
        <field name="name">museo.actividad.kanban</field>
        <field name="model">museo.actividad</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="tipo_actividad"/>
                <field name="fecha_inicio"/>
                <field name="fecha_fin"/>
                <field name="estado"/>
                <field name="asistentes_confirmados"/>
                <field name="capacidad_maxima"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click" t-att-class="'oe_kanban_color_' + (kanban_color(record))">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_tags">
                                        <span t-att-class="'badge bg-' + ('success' if record.estado.raw_value == 'realizada' else 'warning' if record.estado.raw_value == 'en_curso' else 'info' if record.estado.raw_value == 'confirmada' else 'secondary')">
                                            <field name="estado"/>
                                        </span>
                                        <span class="badge bg-primary ms-1">
                                            <field name="tipo_actividad"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6">
                                        <div>
                                            <i class="fa fa-calendar"/>
                                            <small>
                                                <field name="fecha_inicio" widget="datetime"/>
                                            </small>
                                        </div>
                                        <div class="mt-1">
                                            <i class="fa fa-clock-o"/>
                                            <small>
                                                <field name="duracion_horas"/> horas
                                            </small>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="progress" style="height: 20px;">
                                            <div class="progress-bar" role="progressbar" 
                                                 t-att-style="'width: ' + ((record.asistentes_confirmados.raw_value / record.capacidad_maxima.raw_value) * 100 if record.capacidad_maxima.raw_value > 0 else 0) + '%;'"
                                                 t-att-class="'progress-bar bg-' + ('success' if (record.asistentes_confirmados.raw_value / record.capacidad_maxima.raw_value) * 100 &lt; 80 else 'warning' if (record.asistentes_confirmados.raw_value / record.capacidad_maxima.raw_value) * 100 &lt; 100 else 'danger')">
                                                <field name="asistentes_confirmados"/> / <field name="capacidad_maxima"/>
                                            </div>
                                        </div>
                                        <small class="text-center d-block mt-1">Asistencia</small>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <small>
                                            <i class="fa fa-users"/>
                                            <span t-esc="record.trabajadores_ids.raw_value.length + ' trabajadores'"/>
                                        </small>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_footer">
                                <div class="o_kanban_card_buttons">
                                    <button type="button" class="btn btn-sm btn-outline-primary" name="action_registrar_asistencia">
                                        <i class="fa fa-check"/> Registrar
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-secondary" name="action_view_detalles">
                                        <i class="fa fa-eye"/> Detalles
                                    </button>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista Kanban para Objetos -->
    <record id="view_museo_objeto_kanban" model="ir.ui.view">
        <field name="name">museo.objeto.kanban</field>
        <field name="model">museo.objeto</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="codigo_inventario"/>
                <field name="categoria"/>
                <field name="estado_conservacion"/>
                <field name="imagen"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-if="record.imagen.raw_value" 
                                     t-att-src="kanban_image('museo.objeto', 'imagen', record.id.raw_value)" 
                                     alt="Imagen del objeto" 
                                     class="oe_kanban_image"/>
                                <div t-if="!record.imagen.raw_value" class="oe_kanban_image">
                                    <i class="fa fa-picture-o fa-4x"/>
                                </div>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <small>
                                        <field name="codigo_inventario"/>
                                    </small>
                                </div>
                                <div class="mt-1">
                                    <span t-att-class="'badge bg-' + ('success' if record.estado_conservacion.raw_value == 'excelente' else 'info' if record.estado_conservacion.raw_value == 'bueno' else 'warning' if record.estado_conservacion.raw_value == 'regular' else 'danger')">
                                        <field name="estado_conservacion"/>
                                    </span>
                                    <span class="badge bg-secondary ms-1">
                                        <field name="categoria"/>
                                    </span>
                                </div>
                                <div class="mt-1">
                                    <small>
                                        <i class="fa fa-map-marker"/>
                                        <field name="ubicacion_actual"/>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>